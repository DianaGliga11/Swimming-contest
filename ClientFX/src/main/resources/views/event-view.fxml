<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>

<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.EventEntriesController"
            style="-fx-background-color: #faf2ff;"
            prefWidth="500" prefHeight="500">

    <!-- Background decoration -->
    <Rectangle width="500" height="500"
               fill="linear-gradient(from 25% 25% to 100% 100%, #ffd6e7, #c1f0fd)"
               opacity="0.3"/>

    <!-- Main content container -->
    <VBox spacing="20"
          style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 20; -fx-padding: 25;"
          AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <effect>
            <DropShadow color="#d5a8ff55" radius="10" spread="0.1"/>
        </effect>

        <!-- Title -->
        <Label text="REGISTER PARTICIPANT"
               style="-fx-text-fill: #9370db; -fx-font-weight: bold; -fx-font-size: 18;"/>

        <!-- Participant selection -->
        <VBox spacing="5">
            <Label text="Select Participant:" style="-fx-text-fill: #6a3093; -fx-font-weight: bold;"/>
            <ComboBox fx:id="participantBox"
                      promptText="Choose participant"
                      style="-fx-background-color: white; -fx-border-color: #d8bfd8;"
                      onAction="#onParticipantSelected"/>
        </VBox>

        <!-- Status label -->
        <Label fx:id="eventFoundLavel"
               style="-fx-text-fill: #ba55d3; -fx-font-style: italic;"/>

        <!-- Events list -->
        <ListView fx:id="eventListView"
                  style="-fx-background-color: transparent; -fx-border-color: #d8bfd8;"
                  prefHeight="200">
            <effect>
                <DropShadow color="#d5a8ff33" radius="5" spread="0.1"/>
            </effect>
            <styleClass>
                <String fx:value="custom-list-view"/>
            </styleClass>
        </ListView>

        <!-- Confirm button -->
        <Button fx:id="confirmButton" text="CONFIRM"
                style="-fx-background-color: #ba55d3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;"
                onAction="#onConfirmClicked"/>
    </VBox>

    <!-- Decorative elements -->
    <Circle centerX="450" centerY="80" radius="40" fill="#ffd6e755" stroke="#ffb6c155" strokeWidth="2"/>
    <Circle centerX="50" centerY="420" radius="50" fill="#c1f0fd55" stroke="#add8e655" strokeWidth="2"/>
</AnchorPane>