<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controller.MainController">
    <children>
        <VBox spacing="10" alignment="CENTER" prefWidth="300" prefHeight="200">
            <Label text="Login" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Button fx:id="loginButton" text="Login" onAction="#onLoginClicked" />
        </VBox>
    </children>
</AnchorPane>
