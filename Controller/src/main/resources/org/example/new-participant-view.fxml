<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.NewParticipantController">
    <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label text="New Participant" />
        <TextField fx:id="name" promptText="Name" />
        <TextField fx:id="age" promptText="Age" />
        <Button fx:id="confirmButton" text="Confirm" onAction="#onConfirmClicked" />
    </VBox>
</AnchorPane>